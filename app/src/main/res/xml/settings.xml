<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="philolog.us Settings"
        android:key="pref_key_storage_settings">
        <ListPreference
            android:key="PHTheme"
            android:title="Dark Mode"
            android:entries="@array/themeentries"
            android:entryValues="@array/themevalues"
            android:defaultValue="PHDayNight"/>
        <SwitchPreference
            android:key="PHSoundOn"
            android:title="Key Click"
            android:defaultValue="false" />
        <SwitchPreference
            android:key="PHVibrateOn"
            android:title="Key Vibrate"
            android:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>